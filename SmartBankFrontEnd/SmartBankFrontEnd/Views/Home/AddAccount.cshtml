@model SmartBankFrontEnd.Models.CurrencyModel

@{
    ViewData["Title"] = "AddAccount";
}

<h1>Додати рахунок</h1>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<hr />
@using(Html.BeginForm()){
@Html.ValidationSummary(true)
<legend>
    Доступні валюти:<br />
    1. UAH<br />
    2. EUR<br />
    3. USD<br />
    Оберіть одну з запропонованих валют для створення нового рахунку.
</legend>
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddAccount">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Створити" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
}

<div>
    @Html.ActionLink("Повернутись назад", "GetAccounts", new { userId = Model.UserId, token = Model.Token });
</div>

