@model SmartBankFrontEnd.Models.ExpenseAddModel

@{
    ViewData["Title"] = "AddExpense";
}

<h1>Додати витрату</h1>


<hr />
<div class="row">
    <div class="col-md-4">


        <div class="text-danger">
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <p>@Html.Raw(Model.ErrorMessage)</p>
            }
        </div>

        <form asp-action="AddExpense">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Money" class="control-label"></label>
                <input asp-for="Money" class="form-control" />
                <span asp-validation-for="Money" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <input asp-for="CategoryId" class="form-control" />
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Token" />
            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="AccountId" />
            <button type="submit" class="btn btn-primary">Витрата</button>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("Повернутись назад", "GetAccounts", new { userId = Model.UserId, token = Model.Token });
</div>


